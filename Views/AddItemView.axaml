<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TodoListup.Views.AddItemView">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Command="{Binding Cancel}" Background="DarkRed">Wróć</Button>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Command="{Binding Ok}" Background="Chartreuse">OK</Button>
        <TextBox AcceptsReturn="False"
                   Text="{Binding Description}"
                   Watermark="Wpisz działanie"/>
    </DockPanel>
</UserControl>
